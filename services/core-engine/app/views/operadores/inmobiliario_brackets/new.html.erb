<% content_for :title, "Nuevo tramo alícuota - Operadores - Fisco.io" %>

<div class="page-container">
  <header class="page-header">
    <h1 class="page-title">Nuevo tramo · Año <%= @year %></h1>
  </header>

  <div class="card">
    <%= form_with model: @bracket, url: operadores_inmobiliario_brackets_path(@year), method: :post, local: true do |f| %>
      <%= f.hidden_field :position, value: @bracket.position %>
      <div class="form-field">
        <%= f.label :base_from, "Base desde" %>
        <%= f.number_field :base_from, min: 0, step: 0.01 %>
      </div>
      <div class="form-field">
        <%= f.label :base_to, "Base hasta" %>
        <%= f.number_field :base_to, min: 0, step: 0.01 %>
      </div>
      <div class="form-field">
        <%= f.label :rate_pct, "Alícuota %" %>
        <%= f.number_field :rate_pct, step: 0.0001 %>
      </div>
      <div class="form-field">
        <%= f.label :minimum_amount, "Monto mínimo" %>
        <%= f.number_field :minimum_amount, min: 0, step: 0.01 %>
      </div>
      <%= f.submit "Crear tramo" %>
    <% end %>
  </div>
</div>
